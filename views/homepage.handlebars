<div class="homepage-container">
{{#each posts as |post|}}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <a href ="/blogpost/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7>">
        <p>
            {{post.content}}
        </p>
    </div>
</div>
{{/each}}
</div>

