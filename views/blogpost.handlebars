<div class="text-center project">
    <div class="col-md-12">
        <h2>{{post.title}}</h2>
        <p>Posted by {{post.user.username}} on {{ format_date post.date_created}}</p>
   </div>
    <div class="col-md-12">
        <p>
            {{post.content}}
        </p>
    </div>
    <div class="comments-section">
        <h3>Comments</h3>
        {{#each post.comments}}
        <div class="comment">
            <p>{{this.comment_text}}</p>
            <p>Posted by {{this.user.username}} on {{format_date this.date_created}}</p>
        </div>
        {{/each}}
    </div>
    {{#if logged_in}}
    <form class=" form comment-form">
        <input type="hidden" id="post-id" value="{{post.id}}" />
        <div class="form-group">
            <label for="comment">Leave New Comment:</label>
            <input class="form-input" type="text" id="comment" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
    {{/if}}
</div>

<script src="/js/homepage.js"></script>
