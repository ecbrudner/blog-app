<div class="text-center">
    <div class="col-md-5">
        <h2>{{post.title}}</h2>
        <p>Posted by {{post.user.username}} on {{post.date_created}}</p>
   </div>
    <div class="col-md-7">
        <p>
            {{post.content}}
        </p>
    </div>
    <div class="comments-section">
        <h3>Comments</h3>
        {{#each post.comments}}
        <div class="comment">
            <p>{{this.comment_text}}</p>
            <p>Posted by {{this.user.username}} on {{this.date_created}}</p>
        </div>
        {{/each}}
    </div>
    <form class=" form comment-form">
        <input type="hidden" id="post-id" value="{{post.id}}" />
        <div class="form-group">
            <label for="comment">Leave New Comment:</label>
            <input class="form-input" type="text" id="comment" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>

<script src="/js/homepage.js"></script>
